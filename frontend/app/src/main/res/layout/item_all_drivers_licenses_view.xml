<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardElevation="10dp"
    cardview:cardCornerRadius="10dp"
    android:layout_margin="10dp"

    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fullname"
        android:textColor="@color/purple"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/license_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname"
        android:text="license_number"
        />


    <TextView
        android:id="@+id/expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/license_number"
        android:text="expiry_date" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expiry_date"
        android:text="Approval Status: " />



    <CheckBox
        android:id="@+id/is_approved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expiry_date"
        android:layout_toEndOf="@+id/txtStatus"
        android:text="Is approved "
        android:enabled="false"
        />



</RelativeLayout>
</androidx.cardview.widget.CardView>
